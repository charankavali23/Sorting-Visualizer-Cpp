{
    "version": "2.0.0",
    "options": {
        "shell": {
            "executable": "cmd.exe",
            "args": [
                "/d",
                "/c"
            ]
        }
    },
    "tasks": [
        {
            "type": "shell",
            "label": "SDL2",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "src\\*.cpp",
                "-o",
                "build\\main.exe",
                "-IC:/Users/chara/Development/SDL2/x86_64-w64-mingw32/include",
                "-LC:/Users/chara/Development/SDL2/x86_64-w64-mingw32/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "build\\${fileBasenameNoExtension}.exe",
                "-IC:/Users/chara/Development/SDL2/x86_64-w64-mingw32/include",
                "-LC:/Users/chara/Development/SDL2/x86_64-w64-mingw32/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-mwindows"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            
            "detail": "Task generated by Debugger."
        }
    ]
}